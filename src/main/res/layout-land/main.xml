<?xml version="1.0" encoding="utf-8"?>
<!-- This is the HORIZONTAL version -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/mainSeeRandP"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000" >

    </WebView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/mainTop"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/topText"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="20"
                android:background="#000000"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/save_your_life_one_line"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/topBuoy"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="80"
                android:background="#000000"
                android:contentDescription="@string/describe_save_buoy"
                android:src="@drawable/whitebuoy" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainBottom"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:background="#000000"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bottomBuoy"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="80"
                android:background="#000000"
                android:contentDescription="@string/describe_restore_buoy"
                android:src="@drawable/redbuoy" />

            <TextView
                android:id="@+id/bottomText"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="20"
                android:background="#000000"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/bring_it_back_one_line"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>